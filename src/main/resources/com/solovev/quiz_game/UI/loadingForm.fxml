<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="416.0" prefWidth="300.0" stylesheets="@nord-light.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.solovev.quiz_game.controllers.LoadingForm">
    <children>
        <Label layoutX="81.0" layoutY="-3.0" prefHeight="43.0" prefWidth="139.0" text="Quiz creator">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Label>
        <Label layoutX="13.0" layoutY="36.0" prefHeight="36.0" prefWidth="275.0" text="Number of Questions from 1 to 50:" />
        <TextField fx:id="textFieldNumberOfQuestions" alignment="TOP_LEFT" layoutX="13.0" layoutY="72.0" prefHeight="36.0" prefWidth="275.0" />
        <Hyperlink accessibleText="https://opentdb.com" layoutX="21.0" layoutY="375.0" prefWidth="258.0" text="https://opentdb.com" underline="true" visited="true">
            <graphic>
                <Label text="Quiz is generated thaks to: ">
                    <font>
                        <Font name="System Italic" size="12.0" />
                    </font>
                </Label>
            </graphic>
            <font>
                <Font name="System Italic" size="12.0" />
            </font>
        </Hyperlink>
        <Label layoutX="13.0" layoutY="108.0" prefHeight="36.0" prefWidth="181.0" text="Select Category:" />
        <ComboBox fx:id="comboBoxCategory" layoutX="13.0" layoutY="144.0" prefHeight="36.0" prefWidth="275.0" promptText="Any Category" />
        <Label layoutX="13.0" layoutY="180.0" prefHeight="36.0" prefWidth="181.0" text="Select Difficulty:" />
        <ComboBox fx:id="comboBoxDifficulty" layoutX="13.0" layoutY="216.0" prefHeight="36.0" prefWidth="275.0" promptText="Any Difficulty" />
        <Label layoutX="13.0" layoutY="252.0" prefHeight="36.0" prefWidth="181.0" text="Select Type:" />
        <ComboBox fx:id="comboBoxType" layoutX="13.0" layoutY="288.0" prefHeight="36.0" prefWidth="275.0" promptText="Any Type" />
        <Button layoutX="13.0" layoutY="333.0" mnemonicParsing="false" onAction="#buttonGenerateQuiz" prefHeight="43.0" prefWidth="275.0" text="Generate Quiz!">
            <styleClass>
                <String fx:value="accent" />
                <String fx:value="rounded" />
            </styleClass>
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
        <Button layoutX="240.0" layoutY="40.0" mnemonicParsing="false" onAction="#buttonClear" prefHeight="23.0" prefWidth="48.0" text="Clear">
            <styleClass>
                <String fx:value="rounded" />
                <String fx:value="danger" />
            <String fx:value="small" />
            </styleClass>
        </Button>

    </children>
</AnchorPane>

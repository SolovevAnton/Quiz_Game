<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@nord-light.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.solovev.quiz_game.controllers.MainController">
    <AnchorPane prefHeight="125.0" prefWidth="400.0" stylesheets="@nord-light.css">
        <Label layoutX="99.0" layoutY="14.0" text="Welcome to Quiz!">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Button layoutX="12.0" layoutY="78.0" mnemonicParsing="false" onAction="#buttonLoadFromInternet"
                prefHeight="35.0" prefWidth="175.0" text="Load From Internet">
            <styleClass>
                <String fx:value="accent"/>
                <String fx:value="rounded"/>
            </styleClass>
        </Button>
        <Button layoutX="214.0" layoutY="78.0" mnemonicParsing="false" onAction="#buttonLoadFromFile"
                prefHeight="35.0" prefWidth="175.0" text="Load From File">
            <styleClass>
                <String fx:value="success"/>
                <String fx:value="rounded"/>
            </styleClass>
        </Button>
        <Label layoutX="53.0" layoutY="49.0" text="To start please choose method to load the quiz:">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </AnchorPane>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@nord-light.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.solovev.quiz_game.controllers.MainController">
    <children>
        <AnchorPane prefHeight="156.0" prefWidth="400.0" stylesheets="@nord-light.css">
         <children>
            <Label layoutX="99.0" layoutY="14.0" text="Welcome to Quiz!">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Button layoutX="12.0" layoutY="78.0" mnemonicParsing="false" onAction="#buttonLoadFromInternet" prefHeight="35.0" prefWidth="175.0" text="Load From Internet">
               <styleClass>
                  <String fx:value="accent" />
                  <String fx:value="rounded" />
               </styleClass></Button>
            <Button layoutX="214.0" layoutY="78.0" mnemonicParsing="false" onAction="#buttonLoadFromFile" prefHeight="35.0" prefWidth="175.0" text="Load From File">
               <styleClass>
                  <String fx:value="success" />
                  <String fx:value="rounded" />
               </styleClass></Button>
            <Label layoutX="58.0" layoutY="49.0" text="To start please choose method of Quiz load:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <CheckBox fx:id="checkBoxCorrectAnswers" layoutX="132.0" layoutY="125.0" mnemonicParsing="false" text="Show correct answers" />
         </children></AnchorPane>
    </children>
</VBox>
